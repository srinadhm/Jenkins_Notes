#####################################################

pipeline {
    agent any
    tools {
    maven 'maven-3.8.4'
    }
    stages{
        stage('git checkout stage ') { 
            steps {
                echo 'git checkout'
                git url:  'https://github.com/srinadhm/springboothello-CICD.git' 
            }
        }
        stage('Build stage ') { 
            steps {
                echo 'maven stage'
                sh 'mvn clean install' 
            }
        }
    }
}

